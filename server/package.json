{
  "name": "poke-game-server",
  "version": "1.0.0",
  "description": "texas poker",
  "private": true,
  "dependencies": {
    "@midwayjs/bootstrap": "^3.12.0",
    "@midwayjs/core": "^3.12.0",
    "@midwayjs/decorator": "^3.12.0",
    "@midwayjs/logger": "^2.14.0",
    "@midwayjs/web": "^3.12.0",
    "egg": "^2.0.0",
    "egg-cors": "^2.2.3",
    "egg-jwt": "^3.1.7",
    "egg-mysql": "^4.0.0",
    "egg-redis": "^2.5.0",
    "egg-scripts": "^2.17.0",
    "egg-socket.io": "^4.1.6"
  },
  "devDependencies": {
    "@eggjs/tsconfig": "^1.3.3",
    "@types/mocha": "^10.0.4",
    "@types/node": "^18",
    "@types/socket.io": "^2.1.4",
    "chai": "^4.2.0",
    "eslint": "8",
    "eslint-config-egg": "12",
    "@midwayjs/cli": "^2.0.0",
    "@midwayjs/egg-ts-helper": "^1.0.1",
    "@midwayjs/mock": "^3.12.0",
    "@types/jest": "^29.2.0",
    "cross-env": "^6.0.0",
    "egg-mock": "^3.26.0",
    "typescript": "~4.8.0"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=taxes-poker-server --framework=@midwayjs/web --ts --sticky --workers=1",
    "start-no-daemon": "egg-scripts start --title=taxes-poker-server --framework=@midwayjs/web --ts --sticky --workers=1",
    "stop": "egg-scripts stop --title=taxes-poker-server",
    "start_build": "npm run build && NODE_ENV=production midway-bin dev",
    "clean": "midway-bin clean",
    "dev": "cross-env ets && cross-env NODE_ENV=local midway-bin dev --ts --sticky",
    "debug": "NODE_ENV=local midway-bin debug --ts",
    "test": "npm run lint && midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "lint": "tslint --fix -p tsconfig.json -t stylish",
    "ci": "npm run cov",
    "build": "midway-bin build -c"
  },
  "ci": {
    "version": "10"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Cai",
  "license": "MIT"
}
